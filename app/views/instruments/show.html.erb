<div class="showcontainer">
  <div class="showdetail">
    <% if @instrument.photo.key %>
      <%= cl_image_tag @instrument.photo.key, height: 230, width: 280, crop: :fill %>
    <% end %>
    <h2><strong> <%= @instrument.category %> </strong></h2>
    <h3><%= @instrument.price %> â‚¬</h3>
    <h4>Serial number: #<%= @instrument.serial %></h4>
    <h4><%= @instrument.address %></h4>
    <% if @user.id != @instrument.user_id %>
    <%= link_to "Proceed to booking", new_instrument_booking_path(@instrument), class:"homecontent4" %>
    <% else%>
    <h4 class="homecontent4", style="color:grey">Proceed to booking</h4>
    <% end %>
  </div>

  <div class="mapsize">
    <div style="width: 100%; height: 100%; border-radius: 10px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
<%= link_to "Go back", instruments_path, class:"homecontent2" %>
