<%= simple_form_for [@instrument, @booking], data: { controller: 'flatpickr' } do |f| %>
  <%= f.input :booking_startdate, as: :string, input_html: { data: { flatpickr_target: "startTime" } }, label: 'Start Date' %>
  <%= f.input :booking_enddate, as: :string, input_html: { data: { flatpickr_target: "endTime" } }, label: 'End Date' %>
  <%= f.submit 'Schedule your booking' %>
<% end %>
