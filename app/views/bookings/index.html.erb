<h2 class="homecontent">My bookings</h2>

<% @bookings.each do |book|%>
  <% if @user.id == book.user_id %>
    <div class="instrumentdetail">
      <div class="bookingdetail">
        <p><strong><%= book.instrument.category %></strong> #<%= book.instrument.serial %></p>
        <p>From: <%= book.booking_startdate %></p>
        <p>To: <%= book.booking_enddate %></p>
        <p>€<%= book.instrument.price %> per day</p>
          <p>Final Price: €<%= (((book.booking_enddate)-(book.booking_startdate)).to_i+1)*book.instrument.price %></p>
        <% if book.instrument.photo.key %>
            <%= cl_image_tag book.instrument.photo.key, alt: book.instrument.category, style: 'max-height:140px' %>
        <% end %>
  <% end %>
      </div>
    </div>
<% end %>
<%= link_to "Back to Menu", instruments_path, class:"homecontent" %>
